  <rect x="140" y="120" width="120" height="80" fill="#F4F3EF"/>
  <rect x="140" y="220" width="120" height="80" fill="none" stroke="#F4F3EF" stroke-width="8"/>
  
  <rect x="350" y="80" width="200" height="240" fill="#E1AD01"/>
